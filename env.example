# DB_CONN_MAX_AGE=600
# DB_SSL_REQUIRE=False

# Optional granular Postgres settings if you are not using DATABASE_URL
DB_NAME=treehole
DB_USER=treehole
DB_PASSWORD=super-secure-password
DB_HOST=localhost
DB_PORT=5432

